{
  "name": "Python 3.12 + Postgres 16",
  // --- Base runtime ----------------------------------------------------------
  "image": "mcr.microsoft.com/devcontainers/python:3.12-bookworm",

  // --- Dev Container features ------------------------------------------------
  "features": {
    "ghcr.io/devcontainers/features/postgres:1": {
      "version": "16",
      "database": "secure_db",
      "user": "dev",
      "password": "devpass",
      "cli": true               /* also installs libpq & psql */
    },
    "ghcr.io/devcontainers/features/apt-packages:1": {
      "packages": [
        "postgresql-client"     /* gives pg_isready, createdb, etc. */
      ]
    }
  },

  // --- Networking ------------------------------------------------------------
  "forwardPorts": [5432],
  "portsAttributes": {
    "5432": {
      "label": "PostgreSQL 16",
      "onAutoForward": "notify"
    }
  },

  // --- First-time setup ------------------------------------------------------
  "postCreateCommand": "pip install --upgrade pip && if [ -f requirements.txt ]; then pip install -r requirements.txt; fi",

  // --- Misc ------------------------------------------------------------------
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  }
}
